<h1><%= current_user.name %>のタスク一覧</h1>
<% if @tasks.any? %>
  <ul>
    <% @tasks.each do |task| %>
      <li><%= link_to task.id, task %> : <%= task.status %> &gt; <%= task.content %></li>
    <% end %>
  </ul>
<% end %>

<%= link_to '新規タスクの追加', new_task_path %>
<%= link_to 'ログアウト', logout_path, method: :delete %>
